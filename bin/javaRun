#!/bin/bash

# $1 - Package Root
# $2 - Output Directory
# $3 - Entry Class
# ${@:4} - all other arguments without first three
echo "Compiling:"
echo "Output Folder: $2"
echo "Source Folder: $1"
find $1 -name "*.java" -exec javac -d $2 -cp $1 {} \;

echo "Executing: java -cp $2 ${1%/}.$3 ${@:4}"
echo
java -cp $2 ${1%/}.$3 "${@:4}"
