#!/bin/bash

if [ -z "$1" ];then
	echo "Error: No Arguments"
else
	list=($(xrandr --listmonitors | tail -n +2 | awk '{print $NF}'))
	for i in "${list[@]}";do
		if [ $i == $1 ];then
				found=true
		fi
	done

	if [ -z "$found" ]; then
		echo "Error: Monitor not found"
	else
		xinput --map-to-output $(xinput list --id-only "Wacom Intuos PT M 2 Pen stylus") $1
		xinput --map-to-output $(xinput list --id-only "Wacom Intuos PT M 2 Pad pad") $1
		xinput --map-to-output $(xinput list --id-only "Wacom Intuos PT M 2 Finger") $1
	fi
fi
