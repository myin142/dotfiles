#!/bin/bash

declare -A apps

apps[idea]="com.jetbrains.IntelliJ-IDEA-Ultimate"
apps[discord]="com.discordapp.Discord"
apps[slack]="com.slack.Slack"

function getAppName {
	echo ${apps[${1:-_}]}
}

function printAppNames {
	for name in "${!apps[@]}"; do
		echo "$name"
	done
}

APP=$(getAppName $1)

if [[ -z "$APP" ]]; then
	printAppNames
else
	flatpak run $APP
fi
