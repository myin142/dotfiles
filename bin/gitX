#!/bin/bash

CMD="$1"
ARGS=("${@:2}")

function printLines(){
	git log ${ARGS[0]}..HEAD --pretty=tformat: --numstat | awk '{ add += $1 ; subs += $2 ; loc += $1 - $2 } END { printf "added lines: %s removed lines: %s total lines: %s\n",add,subs,loc }'
}

case "$CMD" in

	"lines") printLines;;

	*) echo "command not defined";;

esac
