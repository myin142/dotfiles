#!/bin/bash

pad="Wacom Intuos PT M 2 Pad pad"
pen="Wacom Intuos PT M 2 Pen stylus"
use=$1

case $use in
	paint)
		xsetwacom set "$pad" Button 1 key ctrl shift z
		xsetwacom set "$pad" Button 3 key ctrl z
		xsetwacom set "$pad" Button 8 key shift
		xsetwacom set "$pad" Button 9 key ctrl
	;;

	*)
		echo "Unknown use";
esac
