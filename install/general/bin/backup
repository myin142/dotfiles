#!/bin/bash

BACKUP_FOLDER="$HOME/Downloads/backups"
BACKUP_TEMP="$BACKUP_FOLDER/temp"

if [ -d $BACKUP_FOLDER ]; then
    rm $BACKUP_FOLDER -rf
fi
mkdir -p $BACKUP_FOLDER
mkdir -p $BACKUP_TEMP
cd $BACKUP_TEMP

function copyFiles() {
    if [ -d $1 ]; then
        rm $1 -rf
    fi

    mkdir -p $1
    cp ${@:2} $1 -r
}

# Backup settings
copyFiles krita-local $HOME/.local/share/krita/*
copyFiles krita $HOME/.config/krita*
copyFiles ssh $HOME/.ssh/*
copyFiles aseprite $HOME/.config/aseprite/user.aseprite*
zip -r "$BACKUP_FOLDER/settings.zip" ssh krita krita-local aseprite

# Backup drawings files
DRAWINGS_FOLDER="$HOME/Shared/Data/krita/drawings"
rm "$DRAWINGS_FOLDER/*.kra~" -f
copyFiles "$BACKUP_TEMP/drawings" "$DRAWINGS_FOLDER/*"
zip -r "$BACKUP_FOLDER/drawings.zip" drawings/*
