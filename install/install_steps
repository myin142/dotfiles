#1 Partitions
#2 Mounting
#3 Mirrors - vim /etc/pacman.d/mirrorlist
#4 Install Arch Base System - pacstrap -i /mnt base
#5 Fstab - genfstab -U -p /mnt >> /mnt/etc/fstab

arch-chroot /mnt

#6 Locale
	vim /etc/locale.gen
	echo LANG=en_US.UTF-8 > /etc/locale.conf
	export LANG=en_US.UTF-8
	locale-gen
#7 Timezone
	ln -s /usr/share/zoneinfo/COUNTRY/CITY /etc/localtime
	hwclock --systohc --utc
#8 Internet
	WIRELESS: pacman -S wireless_tools wpa_supplicant wpa_actiond dialog
	WIRED: systemctl enable dhcpcd@eth0.service
#9 Pacman - Uncomment multilib
	vim /etc/pacman.conf
	pacman -Sy
#10 Account
	passwd
	useradd -m -g users -G wheel,storage,power -s /bin/bash USERNAME
	passwd USERNAME
#11 Sudo - Uncomment wheel
	pacman -S sudo
	EDITOR=vim visudo
#12 Bootloader
	pacman -S grub-bios / grub efibootmgr
	BIOS: grub-install --target=i386-pc --recheck /dev/sda
	UEFI: grub-install --target=x86_64-efi --efi-directory=/boot/ --bootloader-id=GRUB
	cp /usr/share/locale/en\@quot/LC_MESSAGES/grub.mo /boot/grub/locale/en.mo
	grub-mkconfig -o /boot/grub/grub.cfg
#13 Reboot
