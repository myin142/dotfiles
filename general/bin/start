#!/bin/sh

if [ "$1" = "work" ]; then
    # ~/.screenlayout/work.sh
    firefox &
    brave &
    slack &
    teams &
    code &
elif [ "$1" = "map" ]; then
    # ~/.screenlayout/main.sh
    wacom "DP-3-3"
elif [ "$1" = "home" ]; then
    ~/.screenlayout/main.sh
    discord &
    firefox &
    krita &
fi

# Touchscreen to laptop monitor
xinput --map-to-output 'ELAN900C:00 04F3:2D25' eDP-1
