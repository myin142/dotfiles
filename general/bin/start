#!/bin/sh

# Touchscreen to laptop monitor
# xinput --map-to-output 'ELAN900C:00 04F3:2D25' eDP-1
#
BROWSER="zen-browser"

if [ "$1" = "work" ]; then
    # ~/.screenlayout/work.sh
    $BROWSER &
    slack &
    teams &
elif [ "$1" = "map" ]; then
    ~/.screenlayout/main.sh
    wacom "DP-3-3"
elif [ "$1" = "home" ]; then
    discord &
    $BROWSER &
    krita &
   # ~/.screenlayout/main.sh
fi
