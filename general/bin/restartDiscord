#!/bin/sh

function find_id() {
    echo $(ps aux  | grep -v grep | grep /discord/Discord | awk '{ print $2 }' | head -n 1)
}

ID=$(find_id)

if [[ ! -z $ID ]]; then
    echo "Stopping discord"
    kill $ID

    while [[ ! -z $(find_id) ]]; do
        echo "Waiting for discord to close"
        sleep 0.5
    done
fi


echo "Starting discord"
discord &
