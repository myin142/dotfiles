[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

xset s off
xset -dpms

killall pulseaudio &

~/.bin/redstart &
ibus-daemon -drx
nm-applet &

session=${1:-i3}

case $session in
	i3) exec i3;;
	budgie)
		export XDG_CURRENT_DESKTOP=Budgie:GNOME
		exec budgie-desktop
		;;
	cinnamon) exec cinnamon-session;;
	*) exec $1;;
esac
